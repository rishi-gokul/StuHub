<resources>
    <style name="BottomNavigationView" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BottomNavigationView.Active" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="ToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="SearchView">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SmallText" parent="@android:style/TextAppearance">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="CustomDialogTheme">CustomDialogTheme</style>

</resources>
